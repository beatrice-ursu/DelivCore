@model IList < global::DelivCore.Models.Persons.ClientModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Clients
            </div>
            <div class="panel-body">
                <table class="table table-striped table-bordered table-hover display" width="100%" id="clients-grid">
                    <thead>
                        <tr>
                            <th>ClientID</th>
                            <th>LastName</th>
                            <th>Address</th>
                            <th>InvoiceAddress</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script type="text/javascript">
        $('#clients-grid')
            .DataTable({
                ajax: '@Url.Action("GetClients", "Client")',
                columns: [
                    { data: 'Id' },
                    { data: 'LastName' },
                    { data: 'Address' },
                    { data: 'InvoiceAddress' }
                ],
                ordering: true,
                searching: true,
            });
        
    </script>
}