@model IList<global::DelivCore.Models.Persons.CourierModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Couriers
            </div>
            <div class="panel-body">
                <table class="table table-striped table-bordered table-hover display" width="100%" id="couriers-grid">
                    <thead>
                        <tr>
                            <th>CourierId</th>
                            <th>LastName</th>
                            <th>FirstName</th>
                            <th>NoOfOrders</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script type="text/javascript">
        $('#couriers-grid')
            .DataTable({
                ajax: '@Url.Action("GetCouriers", "Courier")',
                columns: [
                    { data: 'Id' },
                    { data: 'LastName' },
                    { data: 'FirstName' },
                    { data: 'NoOfOrders' }
                ],
                ordering: true,
                searching: true,
            });

    </script>
}